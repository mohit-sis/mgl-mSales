<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background1"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout style="@style/TitleBar" >

        <ImageButton
            style="@style/TitleBarAction"
            android:contentDescription="@string/title_home"
            android:onClick="goHome"
            android:src="@drawable/title_home" />

        <ImageView style="@style/TitleBarSeparator" />

        <TextView
            style="@style/TitleBarText"
            android:text="Reading Summary" />

         <ImageView style="@style/TitleBarSeparator" />

        <ImageButton
            style="@style/TitleBarAction"
            android:contentDescription="@string/title_home"
            android:src="@drawable/mahanagarlogosmall" />
    </LinearLayout>

    <ImageView
        android:id="@+id/SplashImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/msales" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="Customer Summary: "
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bpnum_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BP Number: "
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bpNumSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" >
            </TextView>

            <TextView
                android:id="@+id/mronum_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="MRO Number: "
                android:textColor="#000000"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/mroNumSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:visibility="gone" >
            </TextView>

            <TextView
                android:id="@+id/mrucode_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="MRU Code: "
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mruNumSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" >
            </TextView>

            <TextView
                android:id="@+id/meternum_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="Meter Number: "
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meterNumSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" >
            </TextView>

            <TextView
                android:id="@+id/custcanumberTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="CA Number: "
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/custcanumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" >
            </TextView>

            <TextView
                android:id="@+id/custnamesummary_View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="Customer Name: "
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/custNameSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" >
            </TextView>

            <TextView
                android:id="@+id/custcontnum_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="Customer Contact Number(Mobile): "
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/custContactNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:maxLength="10">
            </TextView>

            <TextView
                android:id="@+id/cust_landline_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="Customer Contact Number(Residence): "
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cust_landline_Summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/cust_office_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="Customer Contact Number(Office): "
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cust_office_Summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/address_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="Address: "
                android:textColor="#000000"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/flat_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Flat "
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/custflatSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/flat_TextView"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/flat_TextView"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/floor_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/flat_TextView"
                    android:layout_below="@+id/flat_TextView"
                    android:text="Floor "
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/custfloorSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/floor_TextView"
                    android:layout_alignLeft="@+id/custflatSummary"
                    android:layout_below="@+id/custflatSummary"
                    android:layout_toRightOf="@+id/floor_TextView"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/plot_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/flat_TextView"
                    android:layout_below="@+id/floor_TextView"
                    android:text="Plot "
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/custplotSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/plot_TextView"
                    android:layout_alignLeft="@+id/custflatSummary"
                    android:layout_below="@+id/custfloorSummary"
                    android:layout_toRightOf="@+id/plot_TextView"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/wing_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/flat_TextView"
                    android:layout_below="@+id/plot_TextView"
                    android:text="Wing "
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/custwingSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/wing_TextView"
                    android:layout_alignLeft="@+id/custflatSummary"
                    android:layout_below="@+id/custplotSummary"
                    android:layout_toRightOf="@+id/wing_TextView"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/custAddressSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="Reading Summary: "
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_turbineMeterRead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Turbine Meter Reading:"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/summaryTurbineMeterRead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_CorrectedVol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Corrected Volume:"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/summaryCorrectedVol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_UnCorrectedVol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="UnCorrected Volume:"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/summaryUnCorrectedVol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_OutletPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Outlet Pressure:"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/summaryOutletPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_Temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Temperature:"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/summaryTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_CorrectionFac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Correction Factor:"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/summaryCorrectionFac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_Remarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Remarks:"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/summaryRemarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Meter reader signature: "
                android:textColor="#000000"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgViewReaderSign"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Client signature: "
                android:textColor="#000000"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgViewClientSign"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2" >

                <Button
                    android:id="@+id/submit_button"
                    android:layout_width="0dip"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="#bc3751"
                    android:text="Submit"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
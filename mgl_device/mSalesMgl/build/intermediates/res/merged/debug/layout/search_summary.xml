<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background1"
    android:gravity="center_horizontal" >

    <LinearLayout
        style="@style/TitleBar"
        android:layout_alignParentTop="true" >

        <ImageButton
            style="@style/TitleBarAction"
            android:contentDescription="@string/title_home"
            android:onClick="goHome"
            android:src="@drawable/title_home" />

        <ImageView style="@style/TitleBarSeparator" />

        <TextView
            style="@style/TitleBarText"
            android:text="Customer Summary" />

       <ImageView style="@style/TitleBarSeparator" />

        <ImageButton
            style="@style/TitleBarAction"
            android:contentDescription="@string/title_home"
            android:src="@drawable/mahanagarlogosmall" /> 
    </LinearLayout>

    <LinearLayout
        android:id="@+id/splashImageViewLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_container"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/SplashImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/msales"
            />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splashImageViewLayout"
        android:layout_above="@+id/buttonsLayout"
        android:background="@color/background1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="374dp"
            android:orientation="vertical"
            android:padding="5dip" >

            <TextView
                android:id="@+id/bpnum_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="BP Number: "
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bpNumSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" >
            </TextView>

            <TextView
                android:id="@+id/mronum_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="MRO Number: "
                android:textColor="#000000"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/mroNumSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:visibility="gone" >
            </TextView>

            <TextView
                android:id="@+id/mrucode_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="MRU Code: "
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mruNumSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" >
            </TextView>

            <TextView
                android:id="@+id/meternum_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="Meter Number: "
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meterNumSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" >
            </TextView>

            <TextView
                android:id="@+id/custcanumberTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="CA Number: "
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/custcanumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" >
            </TextView>

            <TextView
                android:id="@+id/custnamesummary_View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="Customer Name: "
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/custNameSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" >
            </TextView>

            <TextView
                android:id="@+id/custcontnum_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="Customer Contact Number(Mobile): "
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/custContactNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:maxLength="10">
            </TextView>

            <TextView
                android:id="@+id/cust_landline_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="Customer Contact Number(Residence): "
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cust_landline_Summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/cust_office_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="Customer Contact Number(Office): "
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cust_office_Summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/address_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="Address: "
                android:textColor="#000000"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/flat_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Flat "
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/custflatSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/flat_TextView"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/flat_TextView"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/floor_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/flat_TextView"
                    android:layout_below="@+id/flat_TextView"
                    android:text="Floor "
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/custfloorSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/floor_TextView"
                    android:layout_alignLeft="@+id/custflatSummary"
                    android:layout_below="@+id/custflatSummary"
                    android:layout_toRightOf="@+id/floor_TextView"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/plot_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/flat_TextView"
                    android:layout_below="@+id/floor_TextView"
                    android:text="Plot "
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/custplotSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/plot_TextView"
                    android:layout_alignLeft="@+id/custflatSummary"
                    android:layout_below="@+id/custfloorSummary"
                    android:layout_toRightOf="@+id/plot_TextView"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/wing_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/flat_TextView"
                    android:layout_below="@+id/plot_TextView"
                    android:text="Wing "
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/custwingSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/wing_TextView"
                    android:layout_alignLeft="@+id/custflatSummary"
                    android:layout_below="@+id/custplotSummary"
                    android:layout_toRightOf="@+id/wing_TextView"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/custAddressSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:padding="5dip"
        android:weightSum="2" >

        <Button
            android:id="@+id/joint_ticketing_button"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="#bc3751"
            android:text="Joint Ticketing"
            android:textColor="@color/white"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/space1"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" />

        <Button
            android:id="@+id/takemeter_button"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="#bc3751"
            android:text="Take Meter Reading"
            android:textColor="@color/white"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/space2"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" />

        <Button
            android:id="@+id/update_customer_button"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="#bc3751"
            android:text="Update Customer"
            android:textColor="@color/white"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="match_parent"
 android:layout_height="wrap_content">
    
    <TextView
     android:id="@+id/txt_user_info_header"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_margin="5dip"
     android:text="Header"
     android:textColor="#000000"
     android:textSize="20sp"/>
    
    <TextView
     android:id="@+id/txt_user_info_detail"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/txt_user_info_header"
     android:layout_margin="5dip"
     android:text="Detail"
     android:textColor="#000000"
     android:textSize="15sp"/>
    
    <TextView
     android:id="@+id/txt_user_info_flatno"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/txt_user_info_detail"
     android:layout_margin="5dip"
     android:text="flatNo."
     android:textColor="#000000"
     android:textSize="15sp"/>
    
</RelativeLayout>

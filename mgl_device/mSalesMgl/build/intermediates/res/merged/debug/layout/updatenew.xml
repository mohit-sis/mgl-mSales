<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background1"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout style="@style/TitleBar" >

        <ImageButton
            style="@style/TitleBarAction"
            android:contentDescription="@string/title_home"
            android:onClick="goHome"
            android:src="@drawable/title_home" />

        <ImageView style="@style/TitleBarSeparator" />

        <TextView
            style="@style/TitleBarText"
            android:text="Update" />

      <ImageView style="@style/TitleBarSeparator" />

        <ImageButton
            style="@style/TitleBarAction"
            android:contentDescription="@string/title_home"
            android:src="@drawable/mahanagarlogosmall" /> -->
    </LinearLayout>

    <ImageView
        android:id="@+id/SplashImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/msales" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:id="@+id/customerNameText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:paddingRight="200dip"
            android:text="Customer Name: "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/customerName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customerNameText"
            android:layout_marginTop="5dip"
            android:paddingRight="200dip"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/bpNumberText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customerName"
            android:layout_marginTop="5dip"
            android:paddingRight="200dip"
            android:text="BP Number: "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/bpNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bpNumberText"
            android:layout_marginTop="5dip"
            android:paddingRight="200dip"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/contactNumberText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bpNumber"
            android:layout_marginTop="5dip"
            android:paddingRight="200dip"
            android:text="Current Contact Number: "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/contactNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contactNumberText"
            android:textColor="#000000" >
        </TextView>

        <TextView
            android:id="@+id/NewcontactNumberText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contactNumber"
            android:layout_marginTop="5dip"
            android:paddingRight="200dip"
            android:text="New Contact Number: "
            android:textColor="#000000"
            android:visibility="gone" />

        <TextView
            android:id="@+id/newcontactNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NewcontactNumberText"
            android:textColor="#000000"
            android:visibility="gone" >
        </TextView>

        <TextView
            android:id="@+id/meternum_TextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newcontactNumber"
            android:layout_marginTop="5dip"
            android:text="Current Meter Number: "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/meterNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/meternum_TextView"
            android:textColor="#000000" >
        </TextView>

        <TextView
            android:id="@+id/newMeternum_TextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/meterNumber"
            android:layout_marginTop="5dip"
            android:text="New Meter Number: "
            android:textColor="#000000"
            android:visibility="gone" />

        <TextView
            android:id="@+id/newMeterNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newMeternum_TextView"
            android:textColor="#000000"
            android:visibility="gone" >
        </TextView>

        <Button
            android:id="@+id/contactNumberButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/bpNumber"
            android:padding="15dip"
            android:text="Edit" />

        <Button
            android:id="@+id/meterNumberbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/contactNumberButton"
            android:layout_below="@+id/contactNumberButton"
            android:padding="15dip"
            android:text="Edit" />
    </RelativeLayout>

</LinearLayout>
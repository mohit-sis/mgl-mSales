<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background1"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_onmCapturedImage"
                android:layout_width="550px"
                android:layout_height="650px"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="10dip"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2"
                android:layout_marginTop="70dp">

                <Button
                    android:id="@+id/b_onmTakePicture"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:background="#bc3751"
                    android:text="@string/btnIntendS"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btncropImage"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:background="#bc3751"
                    android:text="@string/btnCropImage"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- <Button
                 android:id="@+id/b_onmTakePicture"
                 android:layout_width="150dp"
                 android:layout_height="35dp"
                 android:layout_margin="10dp"
                 android:background="#bc3751"
                 android:text="@string/btnIntendS"
                 android:textColor="@color/white" />-->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="2" >

                <Button
                    android:id="@+id/b_onmCancel"
                    android:layout_width="0dip"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="#333333"
                    android:text="Cancel"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

                <Button
                    android:id="@+id/b_onmSavePhoto"
                    android:layout_width="0dip"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="#bc3751"
                    android:text="Save Photo"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>